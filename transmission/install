bashrc
#transmissin
alias tstart='transmission-daemon'
alias tstop='transmission-remote --exit'
alias treload='sudo service transmission-daemon reload'
alias tlist='transmission-remote -n 'transmission:transmission' -l'
alias tbasicstats='transmission-remote -n 'transmission:transmission' -st'
alias tfullstats='transmission-remote -n 'transmission:transmission' -si'
